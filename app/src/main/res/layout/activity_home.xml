<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/Light_Green">

    <View
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/vwAppTitleBar"
        android:layout_width="4dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/Dark_Green"/>

    <ImageView
        android:id="@+id/imgBlackTurtle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/cogturtle"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="10dp"
        android:rotation="-45"
        />

    <LinearLayout
        android:id="@+id/llHomeActivities"
        android:layout_width="389dp"
        android:layout_height="102dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/vwAppTitleBar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAppTitleWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textStyle="bold"
            android:textColor="@color/Dark_Green"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAppTitleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{Username}!"
            android:textColor="@color/Dark_Green"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <View
        android:layout_below="@id/llHomeActivities"
        android:layout_marginTop="20dp"
        android:id="@+id/vwEntryBackground"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/backing_shape"
        android:backgroundTint="@color/Dark_Green"/>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/llHomeActivities"
        android:id="@+id/llActivityPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_below="@id/llActivityPage"
            android:layout_marginTop="10dp"
            android:id="@+id/vwActivityBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/Muted_Green"/>

        <View
            android:layout_below="@id/vwActivityBar"
            android:layout_marginTop="30dp"
            android:id="@+id/vwActivityNames"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/Input_Grey"/>

        <View
            android:layout_below="@id/vwActivityBar"
            android:layout_marginTop="30dp"
            android:id="@+id/vwActivityNames2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/Input_Grey"/>

        <View
            android:layout_below="@id/vwActivityBar"
            android:layout_marginTop="30dp"
            android:id="@+id/vwActivityNames3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/Input_Grey"/>

        <View
            android:layout_below="@id/vwActivityBar"
            android:layout_marginTop="30dp"
            android:id="@+id/vwActivityNames4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/Input_Grey"/>

        <View
            android:id="@+id/vwActivityBar2"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@id/vwActivityBar"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/Input_Grey" />
    </LinearLayout>

</RelativeLayout>