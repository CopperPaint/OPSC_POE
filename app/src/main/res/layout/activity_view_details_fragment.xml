<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="680dp"
    tools:context=".View_Activity_Details_Fragment"
    android:background="@drawable/backing_shape"
    android:backgroundTint="@color/Dark_Green">

    <LinearLayout
        android:id="@+id/llViewActivityDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/llactivityViewTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/llBackandLogButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tvBackText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rectangle"
                    android:backgroundTint="@color/Input_Grey"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:paddingVertical="18dp"
                    android:paddingLeft="78dp"
                    android:paddingRight="56dp"
                    android:text="@string/back"
                    android:textSize="20dp" />


                <ImageView
                    android:id="@+id/imgBackIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="-56dp"
                    android:background="@drawable/rounded_rectangle"
                    android:backgroundTint="@color/purple_200"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:paddingVertical="13dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="15dp"
                    app:srcCompat="@drawable/navigation_arrow"
                    tools:ignore="SpeakableTextPresentCheck" />


                <TextView
                    android:id="@+id/tvViewLogsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_rectangle"
                    android:backgroundTint="@color/Input_Grey"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:paddingVertical="18dp"
                    android:paddingLeft="78dp"
                    android:paddingRight="9dp"
                    android:text="@string/view_logs"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/tvLogsAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="20dp"
                    android:layout_marginTop="-58.5dp"
                    android:layout_marginLeft="6dp"
                    android:paddingRight="26dp"
                    android:paddingLeft="26dp"
                    android:paddingVertical="13dp"
                    android:background="@drawable/rounded_rectangle"
                    android:backgroundTint="@color/purple_200"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:onClick="onClick"
                    />


            </LinearLayout>

            <ImageView
                android:id="@+id/imgActivityImage"
                android:layout_width="170dp"
                android:layout_height="140dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/brownturtle"
                android:background="@drawable/rounded_rectangle"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvGoalsPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/goals"
            android:textColor="@color/Input_Grey"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/llgoalcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="-10dp">

        </LinearLayout>

        <TextView
            android:id="@+id/tvDescriptionPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="@string/description"
            android:textColor="@color/Input_Grey"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_rectangle"
            android:padding="5dp"
            android:text="@string/description"
            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAddLog"
                android:layout_marginTop="12dp"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_rectangle"
                app:srcCompat="@drawable/plusturtle"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                />

            <ImageView
                android:id="@+id/imgEditActivity"
                android:layout_marginTop="12dp"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rounded_rectangle"
                app:srcCompat="@drawable/editturtle"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                />




        </LinearLayout>

    </LinearLayout>


</RelativeLayout>