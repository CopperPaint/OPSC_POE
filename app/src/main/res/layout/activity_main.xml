<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/Light_Green"
    >



    <View
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/vwAppTitleBar"
        android:layout_width="4dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_rectangle_dark_green"/>

    <ImageView
        android:id="@+id/imgBlackTurtle"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/blackturtle"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:rotation="-45"
        />

    <LinearLayout
        android:id="@+id/llWelcome"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/vwAppTitleBar">

        <TextView
            android:id="@+id/tvAppTitleWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/Dark_Green"/>

        <TextView
            android:id="@+id/tvAppTitleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turtle Time"
            android:textStyle="bold"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/Dark_Green"/>


    </LinearLayout>

    <View
        android:layout_below="@id/llWelcome"
        android:layout_marginTop="40dp"
        android:id="@+id/vwEntryBackground"
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:background="@drawable/backing_dark_green"/>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:layout_below="@id/llWelcome"
        android:id="@+id/llEntrySelector"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30dp"
            android:textColor="@color/Input_Grey"
            android:text="Sign In"
            android:textAlignment="center"
            android:onClick="onClick"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tvSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30dp"
            android:textColor="@color/Input_Grey"
            android:text="Sign Up"
            android:textAlignment="center"
            android:onClick="onClick"
            android:clickable="true"/>



    </LinearLayout>

    <View
        android:id="@+id/vwEntryMethod"
        android:layout_width="140dp"
        android:layout_height="5dp"
        android:layout_below="@id/llEntrySelector"
        android:layout_marginLeft="42dp"
        android:background="@drawable/rounded_rectangle_input_grey" />




</RelativeLayout>